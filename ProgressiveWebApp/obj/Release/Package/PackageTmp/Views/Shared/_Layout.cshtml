    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-23581568-13');
        
        var lo = document.querySelector(".loader2");
        lo.style.display = 'none'; 
        var body = document.querySelector(".mainbody");
        var id = document.querySelector("#yourid");

        var idnum = id.value

        function Home() {
            lo.style.display = 'block';
            body.innerHTML = ""
            fetch('/home/test?accountid=' + idnum)
                .then(function (response) {

                    return response.text();
                })
                .then(function (myJson) {
                    lo.style.display = 'none'; 
                    body.innerHTML = ""
                    body.innerHTML += myJson
                    console.log(myJson);
                });
        }

        function detail(num) {
            lo.style.display = 'block';
            body.innerHTML = ""
            fetch('/home/detail?accountid=' + idnum + "&callid=" + num)
                .then(function (response) {

                    return response.text();
                })
                .then(function (myJson) {
                    lo.style.display = 'none';
                    body.innerHTML = ""
                    body.innerHTML += myJson
                    console.log(myJson);
                });
        }
    </script>
